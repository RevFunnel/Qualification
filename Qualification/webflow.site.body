	function getGridColumn(){
		var grid_column = 3;            
		var mq7 = window.matchMedia("(max-width: 700px)");
		var mq9 = window.matchMedia("(max-width: 900px)");

		if(mq7.matches){
			grid_column = 1;
		}else if(mq9.matches){
			grid_column = 2;
		}                  
		return grid_column;          
	} 
	
	function gridifyColumn(obj){
		var gcol = getGridColumn();
