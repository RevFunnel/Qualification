	//utility methods
	function concatValues(param,value,type){
		var outp = ''; 
		if(getParam(param)){
		  var parval = getParam(param);
		  if((type == 'int' && parseInt(parval)> 0) || (type == 'string' && $.trim(parval) !='')){
			  outp += value;
		  }			  
		}	
		return outp;		  
	}
	  
	function cleanStr(str){
